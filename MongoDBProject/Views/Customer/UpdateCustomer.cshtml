@model MongoDBProject.Dtos.CustomerDtos.GetByIdCustomerDto

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <br />
    <form method="post">
        <div class="alert alert-info">Ürün Güncelleme </div>
        <label>Müşteri Id</label>
        <input type="text" asp-for="CustomerId" class="form-control" />
        <br />
        <label>Müşteri Adı Soyadı</label>
        <input type="text" asp-for="CustomerNameSurname" class="form-control" />
        <br />
        <label>Müşteri Şehir</label>
        <input type="text" asp-for="CustomerCity" class="form-control" /> 
        <br />
        <label>Müşteri Telefon</label>
        <input type="text" asp-for="CustomerPhone" class="form-control" />
        <br />
        <button class="btn btn-dark">Ürünü Güncelle</button>
    </form>
</div>

