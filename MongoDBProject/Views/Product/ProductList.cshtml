@model List<MongoDBProject.Dtos.ProductDtos.ResultProductsWithCategoryDto>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Listesi</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                           <th scope="col">#</th>
                            <th scope="col">Ürün Resim </th>
                            <th scope="col">Ürün Adı </th>
                            <th scope="col">Ürün Stok </th>
                            <th scope="col">Ürün Fiyat </th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>       
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.SavedUrl">
                                        </a>                
                                    </div>
                                </th>
                              
                                 <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Stock
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    
                                    @item.Category.CategoryName
                                </td> 

                                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <td><a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Girişi</a></td>
            </div>
        </div>
        
    </div>
</div>