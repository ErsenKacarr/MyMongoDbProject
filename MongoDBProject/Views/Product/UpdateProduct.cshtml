@model MongoDBProject.Dtos.ProductDtos.GetByIdProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <br /><br />
    <form method="post">
        <div class="alert alert-info">Ürün Güncelleme </div>
        <label>Ürün Id</label>
        <input type="text" asp-for="ProductId" class="form-control" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Resim</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Seçiniz...", new { @class = "form-control" })
        <br />
        <button class="btn btn-dark">Ürünü Güncelle</button>
    </form>
</div>
