@model List<MongoDBProject.Dtos.OrderDtos.ResultOrderWithCustomerWithProductDto>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sipariş Listesi</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün Adı </th>
                            <th scope="col">Ürün Adet </th>
                            <th scope="col">Müşteri Adı</th>
                            <th scope="col">Sipariş Tarihi </th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.Product.Name
                                </td>
                                <td>
                                    @item.OrderProductPiece
                                </td>
                                <td>
                                    @item.Customer.CustomerNameSurname
                                </td>
                                <td>
                                    @(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))
                                </td>

                                <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <td><a href="/Order/CreateOrder/" class="btn btn-primary">Yeni Sipariş Girişi</a></td>
            </div>
        </div>

    </div>
</div>